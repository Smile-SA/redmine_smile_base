<%
  plugin_name = :redmine_smile_base

  plugin_override_last_date = SmileTools.override_last_date(plugin_name)

  if plugin_override_last_date.is_a?(Time)
    plugin_override_last_date = plugin_override_last_date.to_s(:db)
  end
-%>
<br/>

<fieldset>
  <legend><h4>Enable conversion in days in project home :</h4></legend>

  <%= check_box_tag "settings[enable_conversion_in_days_in_project_home]", 1, @settings['enable_conversion_in_days_in_project_home'] %>
</fieldset>
<br/>

<fieldset style="font-family:monospace; font-size:9px;">
  <legend><h4>[<%= SmileTools.override_count(plugin_name) %>] override(s) added by the plugin (<%= plugin_override_last_date %>) :</h4></legend>

  <%= SmileTools.override_traces(plugin_name).html_safe %>
</fieldset>
